<div class="container-profile-edit-account">
  <div class="container padded">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="container-edit-profile">
          <h1><b><%= @current_user.first_name %></b> add info</h1>
          <p>Make your profile compleet so guest can find you! So we can start your personal adventures.</p>
          <div class="header-line"></div>
        </div>
        <%= simple_form_for @account, url: account_profile_path do |f| %>
        <%= f.error_notification %>
        <%= f.input :email %>
        <%= f.input :phone %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <hr>
        <%= f.input :street %>
        <%= f.input :zipcode %>
        <%= f.input :city %>
        <%= f.input :birthday %>
        <hr>
        <%= f.input :photo, label: 'Profile Picture' %>
        <%= cl_image_tag current_user.photo, height: 150, width: 150, crop: :fill, :radius => :max, class: "profile-page-photo" %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :bio %>
        <%= f.input :hour_rate %>
        <hr>
        <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%#= link_to "Profile", account_profile_path, :class => "btn btn-default" %>
