<h1>Account Tours Index</h1>

<%= link_to "Add", new_account_tour_path, :class => "btn btn-success btn-sm"%>

<ul>
  <% @tours.each do |tour| %>
  <li>
    <b>Id:</b> <%= tour.id  %>
    <b>Description:</b> <%= tour.description %>
    <hr>
    <%= link_to "edit", edit_account_tour_path(tour), :class => "btn btn-primary btn-sm"   %>
    <%= link_to "delete", account_tour_path(tour), method: :delete, data: { confirm: "Are you sure?" },  :class => "btn btn-warning btn-sm"%>
  </li>
  <% end %>
</ul>
