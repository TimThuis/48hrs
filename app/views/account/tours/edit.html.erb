<%= render "shared/navbarback" %>
<%= render "shared/navbarspace" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <h1>Edit your <b><%= @tour.category.name %></b> tour</h1>
    <div class="header-line-left"></div>

      <%= simple_form_for(@tour, url: account_tour_path(@tour)) do |f| %>
      <%= f.error_notification %>

      <%= f.association :category, collection: @categories , default: @tour.category_id %>
      <%= f.input :description %>
      <%= f.button :submit %>
      <%= link_to "Back", account_tours_path, :class => "btn btn-default"%>

      <% end %>
    </div>
  </div>
</div>
