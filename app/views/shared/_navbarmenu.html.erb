<div class="navbar-wagon-item">
  <div class="dropdown">
    <% if current_user.provider %>
      <%= image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <% elsif current_user.photo.present? %>
      <%= image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <% else %>
      <%= image_tag "default-user-photo.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <% end %>
    <div class="note-bullit">
      <% if current_user.guide == true %>
      <%= current_user.requests.length %>
      <% else %>
      <%= current_user.tours.length %>
      <% end %>
    </div>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <% if current_user.guide == true %>
      <li>
        <%= link_to account_profile_path do %>
        <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
        <% end %>
      </li>
      <% end %>
      <li>
        <%= link_to account_bookings_path do %>
        <i class="fa fa-book"></i>  <%= t ".profile", default: "Bookings" %>
        <% end %>
      </li>
      <li>
        <%= link_to root_path do %>
        <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
